<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = "home">
    <%= yield %>
    <div class="top" >
      <%= image_tag("logo.jpg", class: "top") %>
      <% if logged_in? %>
        <%= link_to "Profile", current_user, class: "tool_bar" %>
        <%= link_to "Logout", logout_path, method: :delete ,class: "tool_bar"%>
      <% else %>  
        <%= link_to "Login", login_path, class: "tool_bar" %>
      <% end %>
      <%= link_to "Show ", '#', class: "tool_bar" %>
    </div>
  </body>
</html>
