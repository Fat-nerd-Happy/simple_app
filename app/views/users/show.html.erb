<% provide(:title, @user.name) %>
<div class="info">
    <h2 class="name">
        <%= @micropost.name %>
    </h2>
    <%= image_tag @micropost.picture.url if @micropost.picture? %>
    <p class = "info"><b>姓名:</b><%= @micropost.name %></p>
    <p class = "info"><b>年龄:</b><%= @micropost.age %></p>
    <p class = "info"><b>性别:</b><%= @micropost.gender %></p>
    <p class = "info"><b>研究所:</b><%= @micropost.institute %></p>
    <p class = "info"><b>邮箱:</b><%= @user.email %></p>
    <p class = "info"><b>签名:</b></p>
    <p class = "info"><%= @micropost.content %></p>
    <%= link_to "修改我的信息!", edit_micropost_path, class: "button_sign" %>
</div>